pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building node application is starting'
            }
        }
        stage('Deploy to dev') {
            steps {
                echo 'Deploying to DEV'
            }
        }
        stage('Test on DEV') {
            steps {
                echo 'Testing on DEV'
            }
        }
        stage('Deploy to STG') {
            steps {
                echo 'Deploying to DEV'
            }
        }
        stage('Test on STG') {
            steps {
                echo 'Testing on DEV'
            }
        }
        stage('Deploy to PROD') {
            steps {
                echo 'Deploying to DEV'
            }
        }
        stage('Test on PROD') {
            steps {
                echo 'Testing on DEV'
            }
        }
    }
}
